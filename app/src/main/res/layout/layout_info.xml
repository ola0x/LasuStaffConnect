<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Lasu Info"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_medium"
        android:text="We will share information from the areas you pick"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.014" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>

    <TextView
        android:id="@+id/fp_bulletin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:drawableTop="@drawable/hm_bulletin"
        android:drawablePadding="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="Bulletin"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintVertical_bias="0.044"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/fp_alarm"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:drawableTop="@drawable/hm_alarm"
        android:drawablePadding="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="Emergence Alert Alarm"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fp_bulletin"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintLeft_toRightOf="@+id/fp_bulletin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/fp_report"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/hm_report"
        android:drawablePadding="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center_horizontal"
        android:text="Report an Incidence"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fp_alarm"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fp_lems"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@mipmap/lasu_logo_round"
        android:drawablePadding="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center_horizontal"
        android:text="LEMS \n Leave Management System"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fp_report"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintLeft_toRightOf="@+id/fp_report"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fp_ecv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/hm_ecv"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fp_lems"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fp_ispadems"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/hm_ispadems"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/fp_ecv"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintLeft_toRightOf="@+id/fp_ecv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fp_helpdesk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/hm_helpdesk"
        android:drawablePadding="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center_horizontal"
        android:text="HelpDesk"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fp_ecv"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/fp_dict"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:drawableTop="@drawable/hm_dict"
        android:drawablePadding="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="DICT \n Support Team"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="@id/fp_helpdesk"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintLeft_toRightOf="@+id/fp_helpdesk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txt_copyright2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_copyright_24"
        android:drawablePadding="3dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="DICT LASU"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>